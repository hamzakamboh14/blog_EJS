<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body>
    <div class="container">
       <%- include('./partials/header') %>
        <div class="content">
            <% if(blogs.length > 0){ %>
                <% blogs.forEach(blog =>{ %>
                    <a href="/blogs/single/<%= blog._id %>">
                        <h2><%= blog.title %></h1>
                        <p><%= blog.body %></p>
                    </a>
                <% }) %>
                <% }else{ %>
                    <p>There are no Blogs to Show</p>
                <% } %>
            
        </div>
       <%- include('./partials/footer') %>
    </div>
</body>
</html>